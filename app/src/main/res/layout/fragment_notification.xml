<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.NotificationFragment">

    <androidx.appcompat.widget.Toolbar
        android:paddingTop="15dp"
        android:id="@+id/notification_toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="bottom"
        android:layout_gravity="top"
        app:title="@string/notification"
        app:menu="@menu/settings"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="15dp"
        android:background="@color/gray"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/notification_recycleview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/empty_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:visibility="invisible"
        android:src="@drawable/ic_empty_box_illustration"/>
    <TextView
        android:id="@+id/tv_empty_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_box"
        android:textSize="22sp"
        android:visibility="invisible"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/text_color"
        android:gravity="top"
        />
    </LinearLayout>
</RelativeLayout>

</LinearLayout>