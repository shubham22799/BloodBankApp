<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_marginVertical="5dp"
    android:gravity="top"
    android:background="@drawable/dark_grey_round_corner_shape"
    android:layout_height="wrap_content">

    <ImageView
        android:paddingHorizontal="10dp"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_ambulance_icon"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="5dp"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/ambulance_name"
            android:maxLines="2"
            android:textSize="14sp"
            android:lines="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ambulance_name"
            android:textColor="@color/text_color"/>
        <TextView
            android:id="@+id/a_rating"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ratings"
            android:textColor="@color/text_color"/>

        <TextView
            android:id="@+id/avail_state"
            android:layout_marginTop="5dp"
            android:textIsSelectable="true"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/avail_text"
            android:textColor="@color/text_color"/>
        <TextView
            android:id="@+id/txt_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_phone"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_color"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
<TextView
    android:id="@+id/call_btn"
    android:layout_width="wrap_content"
    android:text="@string/call"
    android:textColor="@color/text_color"
    android:layout_height="wrap_content"
    app:drawableTopCompat="@drawable/ic_call_icon"
    android:padding="5dp" />

    </LinearLayout>


</LinearLayout>